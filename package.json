{
  "name": "tabbouleh",
  "version": "0.0.3-development",
  "description": "JSON Schema generator from TypeScript sources",
  "keywords": [
    "typescript",
    "json",
    "jsonschema",
    "schema",
    "forms"
  ],
  "main": "dist/tabbouleh.umd.js",
  "module": "dist/tabbouleh.es5.js",
  "typings": "dist/types/tabbouleh.d.ts",
  "files": [
    "dist"
  ],
  "author": "Chnapy <richardhaddad@hotmail.fr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Chnapy/tabbouleh.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:verbose": "jest --coverage --verbose",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "travis-deploy-once": "travis-deploy-once"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@types/jest": "24.0.17",
    "@types/json-schema": "7.0.3",
    "@types/node": "12.7.2",
    "colors": "1.3.3",
    "commitizen": "4.0.3",
    "coveralls": "3.0.6",
    "cross-env": "5.2.0",
    "cz-conventional-changelog": "3.0.2",
    "husky": "3.0.3",
    "jest": "24.9.0",
    "jest-config": "24.9.0",
    "lint-staged": "9.2.1",
    "lodash.camelcase": "4.3.0",
    "prettier": "1.18.2",
    "prompt": "1.0.0",
    "reflect-metadata": "0.1.13",
    "replace-in-file": "4.1.3",
    "rimraf": "3.0.0",
    "rollup": "1.19.4",
    "rollup-plugin-commonjs": "10.0.2",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-typescript2": "0.22.1",
    "semantic-release": "15.13.21",
    "shelljs": "0.8.3",
    "travis-deploy-once": "5.0.11",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "typedoc": "0.15.0",
    "typescript": "3.5.3"
  }
}
